<multipy>
    orientation: 'vertical'
    padding: 8
    spacing: 8
    Label:
        id: question
        size_hint_y:0.1
        font_size:'30sp'
        text:"la question"
        halign:"left"
    ProgressBar:
    	size_hint_y:0.01
        max: 100
    	value: 0 #int(afficheur.text) if afficheur.text != "" else 0
    BoxLayout:
        orientation:"horizontal"
        size_hint_y:0.1
        padding:8
        spacing:8
        Label:
            id: afficheur
            font_size:'60sp'
            size_hint: 9, 1
        Button:
            size_hint: 1, 1
            text: "Corriger"
            on_release: afficheur.text = ""
    GridLayout:
        cols:3
        padding: 4
        spacing: 4
        Button:
            font_size:'60sp'
            text:"1"
            on_release:afficheur.text += self.text
        Button:
            font_size:'60sp'
            text:"2"
            on_release:afficheur.text += self.text
        Button:
            font_size:'60sp'
            text:"3"
            on_release:afficheur.text+=self.text
        Button:
            font_size:'60sp'
            text:"4"
            on_release:afficheur.text+=self.text
        Button:
            font_size:'60sp'
            text:"5"
            on_release:afficheur.text+=self.text
        Button:
            font_size:'60sp'
            text:"6"
            on_release:afficheur.text+=self.text
        Button:
            font_size:'60sp'
            text:"7"
            on_release:afficheur.text+=self.text
        Button:
            font_size:'60sp'
            text:"8"
            on_release:afficheur.text+=self.text
        Button:
            font_size:'60sp'
            text:"9"
            on_release:afficheur.text+=self.text
        Button:
            font_size:'60sp'
            text:"0"
            on_release:afficheur.text+=self.text
        Label:
            id:scoreBoard
            font_size:'30sp'
            color:[0.3,0.9,0.3,1]
            text:""
        Button:
            font_size:"30sp"
            text:"GO !"
            on_release:root.control()
    Label:
        id:scoreBoard
        size_hint_y:0.1
        font_size:'30sp'
        color:[0.3,0.9,0.3,1]
        text:"score : {}, record : {}".format(root.score, root.record)

