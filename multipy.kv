<Multipy>
    orientation: 'vertical'
    padding: 8
    spacing: 8

    BoxLayout:
        size_hint_y: .1
        orientation: "vertical"
        ActionBar:
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: "Kivy Practice"
                    with_previous: False
                ActionOverflow:
                    ActionButton:
                        text: "Settings"
                        on_press: app.open_settings()
    
    Label:
        id: question
        size_hint_y:0.1
        font_size:'30sp'
        text:"question"
        halign:"left"
    ProgressBar:
    	size_hint_y:0.01
        max: 100
    	value: 0 #int(afficheur.text) if afficheur.text != "" else 0
    BoxLayout:
        orientation:"horizontal"
        size_hint_y:0.1
        padding:8
        spacing:8
        Label:
            id: afficheur
            font_size:'60sp'
            size_hint: 9, 1
        Button:
            on_release: afficheur.text = ""
            size_hint: 1, 1
            text: ""
            Image:
                source: 'correct.png'
                y: self.parent.y
                x: self.parent.x
                size: self.parent.width, self.parent.height
                allow_stretch: True
    GridLayout:
        cols:3
        padding: 4
        spacing: 4
        Button:
            font_size:'60sp'
            text:"1"
            on_release:afficheur.text += self.text
        Button:
            font_size:'60sp'
            text:"2"
            on_release:afficheur.text += self.text
        Button:
            font_size:'60sp'
            text:"3"
            on_release:afficheur.text+=self.text
        Button:
            font_size:'60sp'
            text:"4"
            on_release:afficheur.text+=self.text
        Button:
            font_size:'60sp'
            text:"5"
            on_release:afficheur.text+=self.text
        Button:
            font_size:'60sp'
            text:"6"
            on_release:afficheur.text+=self.text
        Button:
            font_size:'60sp'
            text:"7"
            on_release:afficheur.text+=self.text
        Button:
            font_size:'60sp'
            text:"8"
            on_release:afficheur.text+=self.text
        Button:
            font_size:'60sp'
            text:"9"
            on_release:afficheur.text+=self.text
        Button:
            font_size:'60sp'
            text:"0"
            on_release:afficheur.text+=self.text
        Label:
            id:scoreBoard
            font_size:'30sp'
            color:[0.3,0.9,0.3,1]
            text:""
        Button:
            font_size:"60sp"
            text:"GO !"
            on_release:root.control()
    Label:
        id:scoreBoard
        size_hint_y:0.1
        font_size:'30sp'
        color:[0.3,0.9,0.3,1]
        text:"score : {}, record : {}".format(root.score, root.record)

